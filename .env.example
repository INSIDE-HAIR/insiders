# Application Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"
NODE_ENV="development"

# NextAuth Configuration
NEXTAUTH_SECRET="your-nextauth-secret-here"
AUTH_SECRET="your-auth-secret-here"

# Database
DATABASE_URL="your-mongodb-connection-string"

# OAuth Providers
## GitHub
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

## Google OAuth (for authentication)
GOOGLE_CLIENT_ID="your-google-oauth-client-id"
GOOGLE_CLIENT_SECRET="your-google-oauth-client-secret"
GOOGLE_OAUTH_REDIRECT_URI="http://localhost:3000/api/auth/callback/google"

# Email Configuration
RESEND_API_KEY="your-resend-api-key"
AUTH_RESEND_KEY="your-resend-api-key"
EMAIL_FROM="noreply@yourdomain.com"

# External APIs
HOLDED_API_KEY="your-holded-api-key"

# Google Drive API (for file management)
GOOGLE_DRIVE_CLIENT_EMAIL="your-service-account-email"
GOOGLE_DRIVE_PRIVATE_KEY="your-service-account-private-key"
GOOGLE_DRIVE_PROJECT_ID="your-gcp-project-id"
GOOGLE_DRIVE_CLIENT_ID="your-drive-client-id"
GOOGLE_DRIVE_ROOT_FOLDER_ID="your-root-folder-id"

# Google Calendar API (for calendar features)
GOOGLE_CALENDAR_CLIENT_ID="your-calendar-client-id"
GOOGLE_CALENDAR_CLIENT_SECRET="your-calendar-client-secret"
GOOGLE_CALENDAR_REFRESH_TOKEN="your-calendar-refresh-token"
GOOGLE_CALENDAR_REDIRECT_URI="http://localhost:3000/api/calendar/auth/callback"
GOOGLE_CALENDAR_DEFAULT_TIMEZONE="Europe/Madrid"
GOOGLE_CALENDAR_DEFAULT_CALENDAR_ID="your-default-calendar-email"

# Production URLs (set these in your production environment)
# GOOGLE_OAUTH_REDIRECT_URI="https://yourdomain.com/api/auth/callback/google"
# GOOGLE_CALENDAR_REDIRECT_URI="https://yourdomain.com/api/calendar/auth/callback"