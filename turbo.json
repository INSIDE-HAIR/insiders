{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["NODE_ENV", "NEXTAUTH_SECRET", "NEXTAUTH_URL"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["NODE_ENV", "NEXTAUTH_SECRET", "NEXTAUTH_URL"]
    },
    "lint": {
      "outputs": []
    },
    "type-check": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"],
      "outputs": []
    }
  },
  "globalDependencies": [
    "package.json",
    "tsconfig.json",
    "tailwind.config.ts", 
    "next.config.mjs",
    ".env*",
    "prisma/schema.prisma"
  ],
  "globalEnv": [
    "NODE_ENV",
    "NEXTAUTH_SECRET",
    "NEXTAUTH_URL"
  ]
}